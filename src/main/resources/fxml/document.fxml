<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@/styles/documentdetails.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="goran.rs.bg.grkreator.controller.DocumentController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="17.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <JFXCheckBox fx:id="inPdvCheckBox" selected="true" text="U PDV Sistemu" />
            <JFXTextField fx:id="titleTextField" labelFloat="true" promptText="Naslov Dokumenta" text="" />
            <JFXTextField fx:id="documentNumberTextField" labelFloat="true" layoutX="10.0" layoutY="10.0" promptText="Redni broj" text="" />
            <JFXTextField fx:id="documentSettlementTextField" labelFloat="true" layoutX="27.0" layoutY="70.0" promptText="Mesto" text="" />
            <HBox spacing="17.0">
               <children>
                  <JFXButton buttonType="RAISED" defaultButton="true" maxWidth="1.7976931348623157E308" onAction="#onSaveButtonAction" styleClass="big-yellow" text="Sačuvaj" HBox.hgrow="ALWAYS" />
                  <JFXButton cancelButton="true" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" onAction="#onCancelButtonAction" styleClass="big-yellow" text="Otkaži" HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="17.0" left="17.0" right="17.0" top="17.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
